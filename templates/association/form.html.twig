{% extends('base.html.twig') %}

{% block h1 %}
    Ajouter une association
{% endblock %}
{% block body %}
    <style>
        legend { display: none; }
    </style>
    <div class="container ">
        <div class="row justify-content-center align-center">
            <div class="col-8">
                {{ form_start(form) }}
                <div class="gerant">
                        {{ form_widget(form.contacts) }}
                </div>
                <div class="Association">
                    {{ form_label(form.nom, 'Nom de l\'association') }}
                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom) }}
                    {{ form_label(form.nbPersonneNecessaire, 'Nombre de bénévole') }}
                    {{ form_errors(form.nbPersonneNecessaire) }}
                    {{ form_widget(form.nbPersonneNecessaire) }}
                </div>
                <div class="adresse">
                    {{ form_label(form.adresse.codePostale) }}
                    {{ form_errors(form.adresse.codePostale) }}
                    {{ form_widget(form.adresse.codePostale) }}

                    {{ form_label(form.adresse.ville) }}
                    {{ form_errors(form.adresse.ville) }}
                    {{ form_widget(form.adresse.ville) }}

                    {{ form_label(form.adresse.rue) }}
                    {{ form_errors(form.adresse.rue) }}
                    {{ form_widget(form.adresse.rue) }}

                    {{ form_label(form.adresse.numeroRue) }}
                    {{ form_errors(form.adresse.numeroRue) }}
                    {{ form_widget(form.adresse.numeroRue) }}

                    {{ form_label(form.adresse.numeroAppart) }}
                    {{ form_errors(form.adresse.numeroAppart) }}
                    {{ form_widget(form.adresse.numeroAppart) }}
                </div>
                <br>
                <div class="text-center">
                {{ form_rest(form) }}
                {{ form_end(form) }}
                <br><br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}