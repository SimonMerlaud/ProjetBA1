
{% block body %}
    <script text="text/javascript">

    </script>
    <div class="row justify-content-center">
        <div class="col-8">
            <table class="table table-hover text-center">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Bénévole(s) nécessaire(s)</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>

                {% if magasins is null%}
                        <h3>Il n'y a pas de magasin a ce nom</h3>
>                    {% endif %}

                    {% for magasin in magasins %}
                        <tr class="table-light" style="cursor:pointer" onclick="window.location='{{ url("magasin_view", {'id':magasin.id}) }}'">
                            <th scope="row">
                                {{ magasin.nom }}
                            </th>
                            <td>{{ magasin.adresse }}</td>
                            <td>{{ magasin.nbPersonneNecessaire }}</td>
                            <td>
                                <form action="{{ url("magasin_booking",{'id':magasin.id}) }}" style="cursor: pointer;display:inline-block; ">
                                    <button class="btn btn-secondary " type="submit" >Affectation</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    </div>
{% endblock %}

