{% extends 'base.html.twig' %}

{% block h1 %}
    Association {{ association.nom }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <br><br>
                <!-- Social media detail -->
                <div class="row mb-5 gx-5">
                    <div class="col-xxl-6 mb-5 mb-xxl-0">
                        <div class="bg-light px-4 py-5 rounded">
                            <div class="row g-3">
                                <h4 class="mb-4 mt-0">Contact</h4>
                                <!-- Facebook -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-facebook me-2 text-facebook"></i>Nom</label>
                                    {% set contact = magasin.contacts.toArray %}
                                    <input type="text" class="form-control" placeholder="" aria-label="Facebook" value="{{ contact[0].nom}}" disabled>
                                </div>
                                <!-- Twitter -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-twitter text-twitter me-2"></i>Prénom</label>
                                    <input type="text" class="form-control" placeholder="" aria-label="Twitter" value="{{ contact[0].prenom }}" disabled>
                                </div>
                                <!-- Linkedin -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-linkedin-in text-linkedin me-2"></i>Email</label>
                                    <input type="text" class="form-control" placeholder="" aria-label="Linkedin" value="{{ contact[0].mail }}" disabled>
                                </div>
                                <!-- Instragram -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-instagram text-instagram me-2"></i>Téléphone</label>
                                    <input type="text" class="form-control" placeholder="" aria-label="Instragram" value="{{ contact[0].telephone }}" disabled>
                                </div>
                            </div> <!-- Row END -->
                        </div>
                    </div>
                    <div class="col-xxl-6 mb-5 mb-xxl-0">
                        <div class="bg-light px-4 py-5 rounded">
                            <div class="row g-3">
                                <h4 class="mb-4 mt-0">Contact</h4>
                                <!-- Facebook -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-facebook me-2 text-facebook"></i>Nom</label>
                                    {% set contact = magasin.contacts.toArray %}
                                    <input type="text" class="form-control" placeholder="" aria-label="Facebook" value="{{ contact[0].nom}}" disabled>
                                </div>
                                <!-- Twitter -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-twitter text-twitter me-2"></i>Prénom</label>
                                    <input type="text" class="form-control" placeholder="" aria-label="Twitter" value="{{ contact[0].prenom }}" disabled>
                                </div>
                                <!-- Linkedin -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-linkedin-in text-linkedin me-2"></i>Email</label>
                                    <input type="text" class="form-control" placeholder="" aria-label="Linkedin" value="{{ contact[0].mail }}" disabled>
                                </div>
                                <!-- Instragram -->
                                <div class="col-md-6">
                                    <label class="form-label"><i class="fab fa-fw fa-instagram text-instagram me-2"></i>Téléphone</label>
                                    <input type="text" class="form-control" placeholder="" aria-label="Instragram" value="{{ contact[0].telephone }}" disabled>
                                </div>
                            </div> <!-- Row END -->
                        </div>
                    </div>

                    <!-- change password -->
                    <div class="col-xxl-6 mb-5 mb-xxl-0">
                        <div class="bg-light px-4 py-5 rounded">
                            <div class="row g-3">
                                <h4 class="mb-4 mt-0">Information sur le magasin</h4>
                                <!-- Old password -->
                                <div class="col-md-6">
                                    <label for="exampleInputPassword1" class="form-label">Nom</label>
                                    <input type="text" class="form-control" id="exampleInputPassword1" value="{{ magasin.nom }}" disabled>
                                </div>
                                <!-- Confirm password -->
                                <div class="col-md-6">
                                    <label for="exampleInputPassword3" class="form-label">Nombre de bénévole Necessaire</label>
                                    <input type="text" class="form-control" id="exampleInputPassword3" value="{{ magasin.nbPersonneNecessaire }}" disabled>
                                </div>
                                <!-- New password -->
                                <div class="col-md-12">
                                    {% set adresse = magasin.adresse.codePostale ~" "~ magasin.adresse.ville ~', '~ magasin.adresse.rue %}
                                    <label for="exampleInputPassword2" class="form-label">Adresse</label>
                                    <input type="text" class="form-control" id="exampleInputPassword3" value="{{ magasin.adresse }}" disabled>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="justify-content-md-end text-center">
                    <form action="{{ url("magasin_addContact",{'id': magasin.id}) }}" style="cursor: pointer;display:inline-block; ">
                        <button class="btn btn-danger " type="submit" >Ajouter un contact</button>
                    </form>
                    <form action="{{ url("magasin_delete",{'id': magasin.id}) }}" style="cursor: pointer;display:inline-block; ">
                        <button class="btn btn-danger " type="submit" >Supprimer</button>
                    </form>
                    <form action="{{ url("magasin_edit",{'id': magasin.id}) }}" style="display:inline-block; ">
                        <button class="btn btn-primary" type="submit">Modifier</button>
                    </form>
                </div>
        </div>
    </div>

{% endblock %}