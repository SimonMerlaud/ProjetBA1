{% extends 'base.html.twig' %}

{% block title %}Hello MagasinController!{% endblock %}

{% block h1 %}Creation de magasin{% endblock %}

{% block body %}
    <style>
        .col-form-label {display:none;}
    </style>
    <div class="container ">
        <div class="row justify-content-center align-center">
            <div class="col-8">
                {{ form_start(form) }}
                    <div class="form-group">
                        <label for="email" class="form-label mt-2">{{ form_label(form.nom, 'Nom du magasin') }}</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label mt-2">{{ form_label(form.nbPersonneNecessaire, 'Nombre de personne n√©cessaire') }}</label>
                        {{ form_widget(form.nbPersonneNecessaire, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nbPersonneNecessaire) }}
                    </div>
                    <div class="form-group mt-4">
                            <lengend>Adresse</lengend>
                            <label for="roles" class="form-label mt-2">{{ form_label(form.adresse) }}</label>
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.adresse) }}
                    </div>
                    <div class="d-flex justify-content-center mt-2 mb-5">
                        {{ form_widget(form.send, {'attr': {'class': 'btn btn-primary mx-3'}}) }}
                        <a class="btn btn-primary mx-3" href="{{ path('magasin_view', {'id': id}) }}">Retour</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
