{% extends 'base.html.twig' %}

{% block title %}{{ title }} de compte{% endblock %}
{% block h1 %}{{ title }} de compte{% endblock %}
{% block body %}
    <div class="container col-9">
        {{ form_start(form) }}
        <div class="col-12">
            <div class="form-group">
                <label for="email" class="form-label mt-2">{{ form_label(form.mail) }}</label>
                {{ form_widget(form.mail, {'attr': {'class': 'form-control '}}) }}
                {{ form_errors(form.mail) }}
            </div>
            <div class="form-group">

                <label for="password" class="form-label mt-2">{{ form_label(form.password) }}</label>
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.password) }}
            </div>
            <div class="form-group">

                <label for="roles" class="form-label mt-2">{{ form_label(form.roles) }}</label>
                {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.roles) }}
            </div>
            <div class="d-flex justify-content-center m-2">
                {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary mx-3'}}) }}
                <a class="btn btn-primary mx-3" href="{{ path('compte_index') }}">Retour</a>
            </div>

        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}