{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block h1 %}{{ title}}{% endblock %}

{% block javascripts %}{{ parent() }}
    {# { % include 'doodle.html.twig' % }#}
{% endblock %}
{% block body %}
<style>
    .col-form-label {display:none;}
</style>

<div class="container ">
    <div class="row justify-content-center align-center">
        <div class="col-8">
            {{ form_start(form) }}

            <div class="form-group">
                <label class="form-label mt-2">{{ form_label(form.mail,'Email') }}</label>
                {{ form_widget(form.mail,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.mail) }}
            </div>

            <div class="form-group">
                <label class="form-label mt-2">{{ form_label(form.password,'Mot de passe') }}</label>
                {{ form_widget(form.password,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.password) }}
            </div>

            <div class="form-group">
                <label class="form-label mt-2">{{ form_label(form.roles,'Rôle') }}</label>
                {{ form_widget(form.roles,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.roles) }}
            </div>

            <br>
            <lengend>Contact</lengend>
            <div class="form-group form-control">
                <label class="form-label mt-2">{{ form_label(form.contact.nom,'Nom') }}</label>
                {{ form_widget(form.contact.nom,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contact.nom) }}

                <label class="form-label mt-2">{{ form_label(form.contact.prenom,'Prénom') }}</label>
                {{ form_widget(form.contact.prenom,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contact.prenom) }}

                <label class="form-label mt-2">{{ form_label(form.contact.telephone,'Téléphone') }}</label>
                {{ form_widget(form.contact.telephone,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contact.telephone) }}

                <label class="form-label mt-2">{{ form_label(form.contact.proximite,'Proximité') }}</label>
                {{ form_widget(form.contact.proximite,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contact.proximite) }}
            </div>
            <div class="form-group mt-4">
                <lengend>Adresse</lengend>
                <label class="form-label mt-2">{{ form_label(form.contact.adresse) }}</label>
                {{ form_widget(form.contact.adresse,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contact.adresse) }}
            </div>
            <div class="d-flex justify-content-center mt-2 mb-5">
                {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary mx-1'}}) }}
                <a class="btn btn-primary mx-1" href="{{ path('compte_index') }}">Retour</a>
            </div>
            {{ form_end(form) }}

        </div>

        {# <div id="calendar-holder"></div> #}

        {% endblock %}
