{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block h1 %}Se connecter{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6 ">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <div class=" text-center mx-5 justify-content-center">
                        <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control mb-3" autocomplete="username" placeholder="Entrez votre email" required autofocus >
                        <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" placeholder="Entrez votre mot de passe" required >

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

                        <button class="btn btn-lg btn-primary mx-1" type="submit">
                            Valider
                        </button>
                        <a class="btn btn-lg btn-primary mx-1" href="{{ path('benevole_inscription_') }}">Inscription</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
