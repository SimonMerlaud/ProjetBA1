{# templates/booking/calendar.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div style="text-align:center;">
        <a class="btn btn-primary mb-2" href="{{ path('booking_new') }}">Nouveau Creneaux</a>
    </div>
    <div id="calendar-holder"></div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script type="text/javascript" >
        document.addEventListener('DOMContentLoaded', () => {
            var calendarEl = document.getElementById('calendar-holder');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                locale: 'fr',
                timeZone: 'UTC+1',
                defaultView: 'timeGrid',
                visibleRange: {
                    start: '2023-01-15',
                    end: '2023-01-18'
                },
                allDaySlot: false,
                header: false,
                editable: true,
                eventSources: [
                    {
                        url: "{{ path('fc_load_events') }}",
                        method: "POST",
                        extraParams: {
                            filters: JSON.stringify({})
                        },
                    },
                ],
                eventDrop: function(info) {
                    console.log(info.event);
                    {# "{{ path('booking_edit_auto', { 'id': info.event.id, 'start': info.event._instance.range.start, 'end': info.event._instance.range.end }) }}"
                    #}
                    console.log();
                },
                {#
                eventResize: function(info) {
                    "{{ path('booking_resize', { 'id': info.event.id }) }}"
                },#}
                plugins: [ 'interaction', 'timeGrid' ], // https://fullcalendar.io/docs/plugin-index
            });
            calendar.render();
        });
    </script>
{% endblock %}