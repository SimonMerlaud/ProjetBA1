<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Appli Collecte Alimentaire{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.2.2/dist/flatly/bootstrap.css">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        {% endblock %}
        {% block menu %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('accueil') }}">Accueil</a>
                    {% if app.user %}
                        <a class="navbar-brand" href="{{ path('compte_logout') }}">Deconnection</a>
                    {% else %}
                        <a class="navbar-brand" href="{{ path('compte_login') }}">Se connecter</a>
                    {% endif %}

                    <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                        <ul class="navbar-nav me-auto">
                            {% if is_granted('ROLE_BA') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('compte_add') }}">Creer un compte</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
        <h1 class="d-flex justify-content-center m-4">{% block h1 %}Bienvenue{% endblock %}</h1>
    </head>
    <body>

        {% for message in app.flashes('add') %}
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="btn-close btn btn-success" data-bs-dismiss="alert">X</button>
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="btn-close btn btn-danger" data-bs-dismiss="alert">X</button>
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
